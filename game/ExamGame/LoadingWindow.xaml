<Window x:Class="ExamGame.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamGame"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Cursor="None"
        Background="Black"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        Title="LoadingWindow" Height="1080" Width="1920">
    <Grid Margin="50">
        <Viewbox Width="300" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Loading..." Style="{StaticResource TextColor}" VerticalAlignment="Center"/>
                <Image gif:ImageBehavior.AnimatedSource="assets/images/wizard.gif" />
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
